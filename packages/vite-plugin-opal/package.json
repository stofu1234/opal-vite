  },
  "keywords": [
    "vite",
    "vite-plugin",
    "opal",
    "ruby",
    "javascript"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "vite": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "chokidar": "^3.5.3"
  }
}
