{
  "name": "vite-plugin-opal",
  "version": "0.1.0",
  "description": "Vite plugin for Opal - Compile Ruby to JavaScript",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
