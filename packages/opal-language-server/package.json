{
  "name": "opal-language-server",
  "version": "0.3.6",
  "description": "Language Server Protocol implementation for Opal (Ruby to JavaScript)",
  "main": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "exports": {
    ".": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "./patterns": {
      "types": "./dist/patterns.d.ts",
      "import": "./dist/patterns.js",
      "require": "./dist/patterns.cjs"
    },
    "./snippets": {
      "types": "./dist/snippets.d.ts",
      "import": "./dist/snippets.js",
      "require": "./dist/snippets.cjs"
    }
  },
  "bin": {
    "opal-language-server": "./dist/server.js"
  },
  "files": [
    "dist",
    "data"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "opal",
    "ruby",
    "lsp",
    "language-server",
    "language-server-protocol"
  ],
  "author": "stofu1234",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stofu1234/opal-vite.git",
    "directory": "packages/opal-language-server"
  },
  "dependencies": {
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
